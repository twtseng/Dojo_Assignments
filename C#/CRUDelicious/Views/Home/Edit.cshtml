@{
    ViewData["Title"] = "Home Page";
}
@model Dish;

<div class="text-center">
    <h1 class="display-4">Add a new dish!</h1>
    <form action="/edit/@Model.DishId" method="POST">
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for=@Model.Name >
        </div>
        <div class="form-group">
            <label for="Name">Chef</label>
            <input asp-for=@Model.Chef >
        </div>
        <div class="form-group">
            <label for="Name">Tastiness</label>
            <input asp-for=@Model.Tastiness >
        </div>
        <div class="form-group">
            <label for="Name">Calories</label>
            <input asp-for=@Model.Calories >
        </div>
        <div class="form-group">
            <label for="Name">Description</label>
            <input asp-for=@Model.Description >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
